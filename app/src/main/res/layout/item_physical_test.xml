<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/physical_test_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#C7E7EB"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/physical_soldier"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            tools:srcCompat="#FFC107" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="이름"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title_Rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="계급"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title_sitUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="윗몸 일으키기"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title_pushUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="팔굽혀펴기"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title_running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="3km 뜀뛰기"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/physical_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="#9CD4DC"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/physical_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#9CD4DC"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/physical_sitUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#9CD4DC"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/physical_pushUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#9CD4DC"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/physical_running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#9CD4DC"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>