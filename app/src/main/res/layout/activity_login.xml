<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/logo" />

    <ImageView
        android:id="@+id/unitMark"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/soldier_button" />

    <EditText
        android:id="@+id/input_loginID"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_button"
        android:ems="10"
        android:gravity="center"
        android:hint="군번"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/input_loginPwd"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_button"
        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/success_button"
        android:gravity="center"
        android:text="로그인"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/autoLogin_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="자동 로그인"
            android:textSize="10sp" />

        <Button
            android:id="@+id/search_user"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/success_button"
            android:text="ID / PW 찾기"
            android:textColor="#666666"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signup"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/success_button"
            android:text="회원가입"
            android:textColor="#666666"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>